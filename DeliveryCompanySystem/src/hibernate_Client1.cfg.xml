<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.username">DeliveryDbUserClient</property>
    <property name="hibernate.connection.password">ProjektBazy</property>
    <property name="hibernate.connection.url">jdbc:mysql://****/DeliveryDb</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
    <property name="connection.provider_class">org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider</property> 
    <property name="show_sql">true</property>
    <property name="connection.pool_size">1</property>
    <mapping resource="User.hbm.xml"/>
    <mapping resource="Email.hbm.xml"/>
    <mapping resource="Courier.hbm.xml"/>
    <mapping resource="Client.hbm.xml"/>
    <mapping resource="Data.hbm.xml"/>
    <mapping resource="Address.hbm.xml"/>
    <mapping resource="Dimensions.hbm.xml"/>
    <mapping resource="Storeman.hbm.xml"/>
    <mapping resource="Package.hbm.xml"/>
    <mapping resource="CourierData.hbm.xml"/>
    <mapping resource="ClientHistory.hbm.xml"/>
    <mapping resource="StoremanData.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
