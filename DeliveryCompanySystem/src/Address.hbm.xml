<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  
 <hibernate-mapping>  
  <class name="DeliveryCompany.Address" table="Address">  
    <id name="id">  
     <generator class="assigned"></generator>  
    </id>  
            
    <property name="houseNumber" column="HouseNumber"></property>  
    <property name="apartmentNumber" column="ApartmentNumber"></property> 
    <property name="street" column="Street"></property> 
    <property name="postCode" column="PostCode"></property> 
    <property name="city" column="City"></property> 

            
  </class>  
            
 </hibernate-mapping>  